<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="ru.frozik6k.lohouse.ThingFragment">

<!--        <TextView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPath"
            android:textStyle="bold"
            android:text=""/> -->

        <!-- Ввод имени вещи -->
        <EditText
            android:id="@+id/nameItem"
            android:layout_weight="13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/name_item"
            android:textSize="@dimen/text_size"> 
			<requestFocus/>
			</EditText>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="29"
            android:inputType="textMultiLine"
            android:lines="4"
            android:ems="10"
            android:hint="@string/description"
            android:layout_below="@+id/nameItem"
            android:textSize="@dimen/text_size">   
        </EditText>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="58"
            android:layout_below="@id/description">
            <android.support.v4.view.ViewPager
                android:id="@+id/pagerFotos"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundrect"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile_photos" />
                <TextView
                    android:id="@+id/tvCountFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text=""/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_menu_save"/>

</FrameLayout>
